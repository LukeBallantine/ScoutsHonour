@using ScoutsHonour.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title</h2>

<div class="pure-g">
    <div class="pure-u-1">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "pure-form pure-form-aligned", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "field-validation-error" })

    <fieldset>
        <div class="pure-control-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
        </div>

        <div class="pure-control-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
        </div>

        <div class="pure-control-group">
            @Html.LabelFor(m => m.RememberMe, new { @class = "pure-checkbox" })
            @Html.CheckBoxFor(m => m.RememberMe)
        </div>

        <div class="pure-controls">
            <input type="submit" value="Log in" class="pure-button-primary pure-button" />
        </div>

    </fieldset>
            }
            <p>
                @Html.ActionLink("Register as a new user", "Register")
            </p>
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>
        </section>
    </div>
