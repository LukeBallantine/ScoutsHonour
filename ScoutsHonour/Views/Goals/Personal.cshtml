@model IEnumerable<ScoutsHonour.Models.MemberGoalsSummaryViewModel>

@{
    ViewBag.Title = "Personal";
}

<h2>Personal Badges</h2>

<table class="pure-table pure-table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>@Html.DisplayNameFor(model => model.PersonalBadge)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.FullName, "MemberPersonal", new { id = item.MemberId })
                </td>
                <td class="@(item.PersonalBadge.Complete ? "badge-complete" : "")">
                    @Html.DisplayFor(modelItem => item.PersonalBadge.Achieved)/@Html.DisplayFor(modelItem => item.PersonalBadge.Target)
                </td>
            </tr>
        }
    </tbody>
</table>
