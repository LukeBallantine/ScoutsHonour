@model IEnumerable<ScoutsHonour.Models.Organisation>
@{
    if (string.IsNullOrWhiteSpace(ViewBag.Title)) {
        ViewBag.Title = "Home Page";
    }
}

    <h2 class="content-subhead">Scouts Honour</h2>
    <p>
        A tool for managing cubs.
    </p>

    <div class="pure-g">
        <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-3">
            <div class="box-1">
                <h2>Attendance Tracking</h2>
                <p>
                    Keep track of cubs attendance.
                </p>
                <p><a class="pure-button" href="/">Learn more &raquo;</a></p>
            </div>
        </div>
        <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-3">
            <div class="box-1">
                <h2>Badge management</h2>
                <p>
                    Record cubs attendance at a meeting, and link that meeting to a specific badge activity.
                    All cubs will have that badge activity marked off.
                </p>
            </div>
        </div>
        <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-3">
            <div class="box-1">
                <h2>Parent involvement</h2>
                <p>Parents can view their cubs progress towards key badges and submit a request to have an activity marked off.</p>
            </div>
        </div>
    </div>

