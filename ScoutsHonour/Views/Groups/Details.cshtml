@model ScoutsHonour.Models.Group
@{
    ViewBag.Title = "Details";
}

<h2>Group</h2>

<div class="pure-g">

    <div class="pure-u-1">
        <div class="box-1">
            <div class="box-head clearfix">
                <h3 class="pull-left">@Html.DisplayFor(model => model.Title)</h3>
                <div class="pull-right">
                    <a href="@Url.Action("Edit", "Groups", new { id = Model.Id })" class="pure-button"><i class="fa fa-edit"></i>&nbsp; Edit</a>
                    <a href="@Url.Action("Delete", "Groups", new { id = Model.Id })" class="bg-error pure-button"><i class="fa fa-trash-o"></i>&nbsp; Delete</a>
                </div>
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Cubs")
                </dt>

                <dd>
                    @Model.Members.Count()
                </dd>
            </dl>
        </div>
    </div>

    <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-3">
        <div class="box-1">
            <h4 class="clearfix">
                <span class="box-icon bg-error">
                    <i class="fa fa-flag"></i>
                </span>
                Events
            </h4>
            <hr />
            <div>
                <a href="@Url.Action("Index", "Events")" class="pure-button">View</a>
                <a href="@Url.Action("Create", "Events")" class="pure-button"><i class="fa fa-plus"></i> Add</a>
            </div>
        </div>
    </div>

    <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-3">
        <div class="box-1">
            <h4 class="clearfix">
                <span class="box-icon bg-success">
                    <i class="fa fa-user"></i>
                </span>
                Cubs
            </h4>
            <hr />
            <div>
                <a href="@Url.Action("Index", "Members")" class="pure-button">View</a>
                <a href="@Url.Action("Create", "Members")" class="pure-button"><i class="fa fa-plus"></i> Add</a>
            </div>
        </div>
    </div>

    <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-2 pure-u-lg-1-3">
        <div class="box-1">
            <h4 class="clearfix">
                <span class="box-icon bg-warning">
                    <i class="fa fa-trophy"></i>
                </span>
                Badges
            </h4>
            <hr />
            <div>
                <a href="@Url.Action("Cornerstone", "Goals")" class="pure-button">View</a>
                @*<a href="@Url.Action("Create", "Goals")" class="pure-button"><i class="fa fa-plus"></i> Add</a>*@
            </div>
        </div>
    </div>

</div>

